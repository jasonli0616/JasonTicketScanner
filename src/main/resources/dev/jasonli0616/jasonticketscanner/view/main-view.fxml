<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.jasonli0616.jasonticketscanner.Controllers.MainController"
      stylesheets="@../css/main.css">


    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label styleClass="title" text="JasonTicketScanner"/>

    <!-- Student card submit -->
    <TextField fx:id="studentCardInput" />
    <Button text="Submit" defaultButton="true" onAction="#handleSubmitButton" />

    <!-- Edit database button -->
    <Button text="Edit database" onAction="#handleEditDatabaseButton" />
</VBox>