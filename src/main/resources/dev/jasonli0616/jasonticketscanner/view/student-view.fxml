<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.jasonli0616.jasonticketscanner.Controllers.StudentController"
      stylesheets="@../css/main.css">


    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label styleClass="title" fx:id="displayStudentCard" />

    <Label styleClass="h1" text="Tickets" />

    <!-- Display previous tickets -->
    <Label fx:id="previousTicketsAmountLabel" />
    <ListView fx:id="previousTicketsList" />

    <!-- Create new ticket -->
    <Button text="Create new ticket" onAction="#createNewTicket" />

    <!-- Return to main screen -->
    <Button text="Back" onAction="#returnToMainScreen" />

</VBox>